{
  "/v2/act/list": {
    "@rule": "json-schema",
    "@method": "get",
    "@resp": {
      "type": "object",
      "required": ["list", "remark"],
      "properties": {
        "list": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "act_id",
              "act_name",
              "act_status",
              "im_status",
              "foreshow",
              "act_num",
              "act_time",
              "start_time",
              "end_time",
              "teachers"
            ],
            "properties": {
              "act_id": {
                "type": "integer"
              },
              "act_name": {
                "type": "string"
              },
              "act_status": {
                "type": "integer"
              },
              "im_status": {
                "type": "integer"
              },
              "foreshow": {
                "type": "string"
              },
              "act_num": {
                "type": "integer"
              },
              "act_time": {
                "type": "string"
              },
              "start_time": {
                "type": "string"
              },
              "end_time": {
                "type": "string"
              },
              "teachers": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["user_id", "nickname", "title", "avatar", "style", "desc"],
                  "properties": {
                    "user_id": {
                      "type": "integer"
                    },
                    "nickname": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    },
                    "avatar": {
                      "type": "string"
                    },
                    "style": {
                      "type": "string"
                    },
                    "desc": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "remark": {
          "type": "string"
        }
      }
    }
  }
}
